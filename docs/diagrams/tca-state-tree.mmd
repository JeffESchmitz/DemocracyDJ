        NowPlaying["nowPlaying: Song?"]
        Queue["queue: IdentifiedArrayOf&lt;QueueItem&gt;"]
        ConnectedPeers["connectedPeers: IdentifiedArrayOf&lt;Peer&gt;"]
        HostName["displayName: String"]
    end

    subgraph GuestFeature["GuestFeature"]
        direction TB
        GuestState["State"]
        GuestAction["Action"]
