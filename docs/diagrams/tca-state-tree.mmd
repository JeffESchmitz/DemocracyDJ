        direction TB
        AppState["State"]
        AppAction["Action"]
        AppBody["body: Reduce + Scope"]
    end

    subgraph AppStateBox["AppFeature.State"]
        direction LR
        Mode["mode: Mode"]
        ModeEnum["enum Mode {
            .selection
            .hosting(HostFeature.State)
            .joining(GuestFeature.State)
            }"]
    end

    subgraph HostFeature["HostFeature"]
        direction TB
        HostState["State"]
        HostAction["Action"]
        HostDeps["Dependencies:
        • multipeerClient
        • musicKitClient"]
    end

